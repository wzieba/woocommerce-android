<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_surface"
    android:orientation="vertical">

    <View
        android:layout_width="200dp"
        android:layout_height="@dimen/skeleton_list_item_title_text_height_100"
        android:layout_margin="@dimen/major_75"
        android:background="@color/skeleton_color" />

    <View style="@style/Woo.Divider" />

    <include layout="@layout/skeleton_shipping_label_payment_list_item" />

    <include layout="@layout/skeleton_shipping_label_payment_list_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="@dimen/major_100"
        android:background="@color/skeleton_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/image_minor_50"
            android:layout_height="@dimen/image_minor_50"
            android:layout_margin="@dimen/major_100"
            android:background="@color/skeleton_color" />

        <View
            android:layout_width="200dp"
            android:layout_height="@dimen/skeleton_text_height_75"
            android:layout_margin="@dimen/major_75"
            android:background="@color/skeleton_color" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/skeleton_text_button_height"
        android:layout_marginHorizontal="@dimen/major_100"
        android:layout_marginTop="@dimen/major_200"
        android:layout_marginBottom="@dimen/major_100"
        android:background="@color/skeleton_color" />

</LinearLayout>
